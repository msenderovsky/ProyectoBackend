<h1>Lista de productos</h1>

<div class="entry">
    {{#if prods}}
    <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            {{#each prods}}
                <tr>
                    <th scope="row">{{ this.id }}</th>
                    <td>{{ this.title }}</td>
                    <td>{{ this.price }}</td>
                    <td><img src="{{ this.thumbnail }}" alt="{{ this.title }}" width="25"></td>
            
    </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
        <div class="alert alert-warning" role="alert">
            ¡Aún no se han cargado productos!
        </div>
    {{/if}}
</div>